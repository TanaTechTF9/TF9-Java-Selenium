		{
			"name": "List of Books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"const res = pm.response.json();",
							"",
							"const fictionBooks = res.filter((book) => book.available === true);",
							"",
							"const book = fictionBooks[0]",
							"",
							"if (book) {",
							"pm.globals.set(\"bookId\", fictionBooks[0].id);",
							"}",
							"",
							"pm.test(\"book found\", () => {",
							"    pm.expect(book).to.be.an(\"object\");",
							"    pm.expect(book.available).to.eql(true);",
							"})",
							"",
							"pm.test(\"book is non-fiction\", () => {",
							"    pm.expect(book.type).to.eql(\"fiction\")",
							"})",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseURL}}/books?limit=20&type=fiction",
					"host": [
						"{{baseURL}}"
					],
					"path": [
						"books"
					],
					"query": [
						{
							"key": "limit",
							"value": "20"
						},
						{
							"key": "type",
							"value": "fiction"
						}
					]
				}
			},
			"response": []
		},
